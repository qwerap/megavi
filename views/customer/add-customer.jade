extends ../layout/base
block content
	section.content-header
		h1
			| Agregar
		ol.breadcrumb
			li
				a(href='#')
					i.fa.fa-dashboard
					| Level
			li.active Here
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Agregar Listado
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus

			.box-body
				form(role='form',method='post' action='/customers/add')
					.row

						.col-xs-6
							.box-body
								- if (messages.msg_error)
									.alert.alert-danger.alert-dismissable
										button.close(type='button', data-dismiss='alert', aria-hidden='true')
											| Ã—
										h4
											i.icon.fa.fa-ban
											| Alert!
										| !{messages.msg_error}
								.form-group
									label
										| Nombre
									input(type='text',value='#{name}',name='name',placeholder='Ingresar Nombre Encargado', autofocus).form-control
								.form-group
									label
										| Direccion
									input(type='text',name='address',placeholder='Ingresar Direccion').form-control
								.form-group
									label
										| Email
									input(type='text',value='#{email}',name='email',placeholder='Ingresar Email').form-control
								.form-group
									label
										| Telefono
									input(type='text',name='phone',placeholder='Ingresar Telefono').form-control
							.box-footer
								button(type='submit').btn.btn-primary
									| Agregar
								a(href='/customers').btn.btn-primary.pull-right
									| Volver
